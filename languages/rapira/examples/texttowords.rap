fun TEXT_TO_WORDS(PHRASE)

	PHRASE := PHRASE + " "
	WORDS := <* *>

	while PHRASE /= "" do

		K := index(" ", PHRASE)

		if K /= 1 then
			WORDS := WORDS + <* PHRASE[:K-1] *>
		fi

		PHRASE := PHRASE[K+1:]

	od

	return WORDS

end

WORDS_SEQUENCE := TEXT_TO_WORDS("...many people nowadays Like marmelade Instead.")
output: WORDS_SEQUENCE
