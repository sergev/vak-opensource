proc REPLACE(<=WHERE, =>WHAT, =>BY_WHAT)

	N := 1

	do

		K := index(WHAT, WHERE[N:])

		if K = 0 then
			exit
		fi

		K := N + K - 1

		WHERE[K:K+#WHAT-1] := BY_WHAT

		N := K + #BY_WHAT

	od

end

